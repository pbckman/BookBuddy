@model CookieInformationPageViewModel

@{
    ViewBag.Title = "Cookie Policy";

   
    var userLang = Context.Request.Path.Value.Contains("/sv/") ? "sv-SE" : "en-GB";
    ViewData["LoadCookieScript"] = false; 
    ViewData["CookieLanguage"] = userLang; 

}

<div class="container startpage-wrapper cookie-page">
    <h1 class="cookie-title">@(userLang == "sv-SE" ? "Cookie Policy" : "Cookie Policy")</h1>
    <h2 class="cookie-info">@(userLang == "sv-SE" ? "Denna sida innehåller information om hur vi använder cookies." : "This page contains information about how we use cookies.")</h2>
    <div id="CookieDeclaration"></div>
</div>



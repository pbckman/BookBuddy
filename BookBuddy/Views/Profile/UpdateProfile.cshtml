@model ProfileViewModel

@{
    Layout = "~/Views/Shared/Layouts/AuthLayout.cshtml";
    ViewData["Title"] = ViewData["Title"];
    ViewData["Description"] = ViewData["Description"];
}


<div>
    <div>
        <h1>@ViewData["Title"]</h1>
        <p class="text-center mb-4">@ViewData["Description"]</p>
    </div>

    <form method="post" asp-action="UpdateProfile" asp-controller="Profile">
        @Html.AntiForgeryToken()
        <div>
            @ViewData["StatusMessage"]
        </div>
        <div class="form-group mb-3">
            <label asp-for="FirstName">@ViewData["FirstName"]</label>
            <input asp-for="FirstName" placeholder="@ViewData["FirstName"]" />
            <span asp-validation-for="FirstName"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 mb-3">@ViewData["SaveButton"]</button>

    </form>

</div>
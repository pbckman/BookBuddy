@model ProfileViewModel
@inject ProfileService ProfileService

@{
    Layout = "~/Views/Shared/Layouts/AccountLayout.cshtml";
    ViewData["Description"] = ViewData["Description"];

    var user = await _userManager.GetUserAsync(User);
    var userId = user?.Id;
    var profiles = await ProfileService.GetSubProfilesAsync(userId);
    var selectedProfile = await ProfileService.GetSelectedSubProfileAsync(userId);
}


<div>
    <h3 class="text-center">@ViewData["Title"]</h3>
    <p class="text-center mb-4">@ViewData["Description"]</p>
    <div class="dropdown">

        <button class="btn btn-light dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="d-none d-lg-block">@selectedProfile.ProfileFirstName</span>
        </button>

        <ul class="dropdown-menu">
            @foreach (var profile in profiles)
            {
                <li>
                    <form action="@Url.Action("SelectSubProfile", "Profile")" method="post">
                        <input type="hidden" name="profileId" value="@profile.Id" />
                        <button type="submit" class="dropdown-item">@profile.ProfileFirstName</button>
                    </form>
                </li>
            }
        </ul>
    </div>

    <form method="post" asp-action="UpdateProfile" asp-controller="Profile">
        
        <div>
            @ViewData["StatusMessage"]
        </div>
        <div class="form-group mb-3">
            <label asp-for="FirstName">@ViewData["FirstName"]</label>
            <input asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 mb-3">@ViewData["SaveButton"]</button>

    </form>



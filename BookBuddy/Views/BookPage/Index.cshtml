@using BookBuddy.Models.ResultModels
 @model BookPageViewModel


@{
    var translations = ViewData["Translation"] as IDictionary<string, string> ?? new Dictionary<string, string>();

    string btnText;
    if(Model.Status == ResultStatus.InProgress)
        btnText = translations["continuequiz"];
    else if (Model.Status == ResultStatus.Completed)
        btnText = translations["seeresult"];
    else
        btnText = translations["gotoquiz"];
}

<div class="book-card">
    <button class="back-arrow-button" onclick="window.history.back();">
        <i class="fas fa-arrow-left"></i>
    </button>
    <div class="book-container">
        <div class="book-cover">
            <img class="cover-img" src="@Model.ImageUrl" alt="@Model.ImageAltText" />
        </div>
        <div class="book-info">
            <h1>@Model.Title</h1>
            <div class="author-release">
                <p><strong>@translations["authors"]:</strong> @Model.Authors</p>
                <div class="book-plot">
                    <p> @Model.Plot</p>
                </div>
            </div>
        </div>
    </div>

    <div class="button-quiz">
        <a href="@ViewData["QuizUrl"]" class="quiz-button">@btnText</a>
    </div>
</div>

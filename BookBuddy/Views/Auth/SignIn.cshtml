@model SignInViewModel

@{
    Layout = "~/Views/Shared/Layouts/AuthLayout.cshtml";
    ViewData["Title"] = "Sign in";
}


<section class="auth-right">
    <div class="login-card">
        <h2 class="text-center">Login to your Account</h2>
        <p class="text-center mb-4">with your registered Email Address</p>

        <form asp-action="SignIn" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="Email">Email address *</label>
                <input asp-for ="Email" type="email" class="form-control" id="email" name="Email" placeholder="Enter email address">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-3 position-relative">
                <label asp-for="Password">Enter password*</label>
                <input asp-for="Password" type="password" class="form-control" id="password" name="Password" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Remember my password</label>
                <span asp-validation-for="RememberMe"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">Login</button>

           @*  <div class="text-center mt-3">
                <a href="#" class="forgot-password">Forgot Password?</a>
            </div> *@
        </form>
    </div>
</section>

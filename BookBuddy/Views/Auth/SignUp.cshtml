@model SignUpViewModel

@{
    Layout = "~/Views/Shared/Layouts/AuthLayout.cshtml";
    ViewData["Title"] = "Sign up";
    ViewData["Description"] = "Sign up as user by filling in firstname, lastname, email and password";
}

<section class="auth-right">
    <div class="login-card">

        <div class="text-center">
            <h1>Create Account</h1>
            <p class="text-center mb-4">Fill in the details below to create a new account</p>
        </div>

        <form method="post" asp-action="SignUp" asp-controller="Auth">
            @Html.AntiForgeryToken()

            <div>
                @ViewData["StatusMessage"]
            </div>

            <div class="form-group-container row row-cols-1 row-cols-sm-2">
                <div class="form-group mb-3">
                    <label asp-for="Firstname">First name</label>
                    <input asp-for="Firstname" class="form-control" placeholder="Enter your firstname" />
                    <span asp-validation-for="Firstname"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Lastname">Last name</label>
                    <input asp-for="Lastname" class="form-control" placeholder="Enter your lastname" />
                    <span asp-validation-for="Lastname"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group mb-5">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Sign up</button>
        </form>
    </div>
</section>
